<form class="point-edit">
  <div class="input-group">
    <input type="text" class="form-control" name="title" placeholder="标题" value="{{title}}">
  </div>
 <div class="input-group">
    <textarea class="form-control" name="description" rows="3" placeholder="描述">{{description}}</textarea>
  </div>
  <div class="form-group">
    <a class="btn btn-default cancel">取消</a>
    <button class="btn btn-primary" type="submit" data-loading-text="数据提交中...">保存</button>
  </div>
</form>